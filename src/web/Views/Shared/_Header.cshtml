@* 共通ヘッダー*@
@using Microsoft.AspNet.Identity
<div class="container-fluid navbar-dark bg-dark">
    <nav class="navbar navbar-expand-lg container">
        <h1 class="navbar-brand">レバンテック</h1>
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "collapse navbar-collapse justify-content-end navbar-btn" }))
            {
                @Html.AntiForgeryToken()
                <button class="navbar-toggler navbar-btn" type="button" data-toggle="collapse" data-target="#nav-btn" aria-controls="nav-btn" aria-expanded="false" aria-label="ナビゲーション切替">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="nav-btn">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("ようこそ" + User.Identity.GetUserName(), "M01", "M01", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("作業時間一覧", "M02", "M02", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("休暇一覧", "M04", "M04", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                        <li class="nav-item"><span class="nav-link">経費申請（現在作成中）</span></li>
                        <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()"><span class="nav-link">ログオフ</span></a></li>
                    </ul>
                </div>
            }
        }
    </nav>
</div>
